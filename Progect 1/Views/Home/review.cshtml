@model Progect_1.Storage.Entity.Review;
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" 
    href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" 
    integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

</head>
<body>
	<div class="container">
		<div class="row reviews">
			<div class="col-lg-6">
				<h2 class="reviews-h2">Отзывы</h2>
				<form asp-action="Create" asp-controller="Review" asp-antiforgery="true">
					<div class="form-group">
						<label asp-for="Name">Имя:</label>
						<input asp-for="Lastname" type="Name" class="form-control" id="comment-name" placeholder="Введите ваше имя">
					</div>
					<div class="form-group">
						<label asp-for="Lastname">Фамилия:</label>
						<input asp-for="Lastname" type="name" class="form-control" id="comment-surname" placeholder="Введите вашу фамилию">
					</div>
					<div class="form-group">
						<label asp-for="Reviews">Отзыв:</label>
						<textarea asp-for="Lastname" class="form-control" name="" id="comment-body"placeholder="Оставьте ваш отзыв" rows="5"></textarea>
					</div>
					<div class="form-group text-end">
						<button type="submit" id="comment-add" class="btn btn-primary">Добавить отзыв</button>
					</div>
				</form>
			</div>
		</div>	
	</div>
</body>
</html>
 
