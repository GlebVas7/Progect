@model IList<Progect_1.Storage.Entity.Order> 
<section class="order" id="order">

      <div class="heading">
         <span>Заказать сейчас</span>
         <h3>Быстрая доставка до дома</h3>
      </div>

      <form asp-controller="Order" asp-action="Order">
         <div class="box-container">
            <div class="box">
               <div class="inputBox">
                  <span>Имя</span>
                  <input type="text" name="Name" placeholder="Введите ваше имя" required
                  pattern="^[А-Яа-яЁё\s]+$">
               </div>
               <div class="inputBox">
                  <span>Фамилия</span>
                  <input type="text" name="LastName" placeholder="Введите вашу фамилию" required
                  pattern="^[А-Яа-яЁё\s]+$">
               </div>
               <div class="inputBox">
                  <span>Блюдо</span>
                  <input type="text" name="NameOfFood" placeholder="Введите назавание блюда" required>
               </div>
            </div>
            <div class="box">
               <div class="inputBox">
                  <span>Напиток</span>
                  <input type="text" name="NameOfDrink" placeholder="Введите название напитка" required>
               </div>
               <div class="inputBox">
                  <span>Адрес</span>
                  <textarea name="Adress" placeholder="Введите ваш адрес" cols="30" rows="6" required></textarea>
               </div>
               <div class="body_button">
@*                  <span>Отправить заказ</span>
*@                  <input type="submit" value="Отправить заказ" name="comment_add" class="button_hola">                   
               </div>
            </div>
         </div>
@*         <input type="submit" value="order now" class="btn">
*@      </form>
   </section>
